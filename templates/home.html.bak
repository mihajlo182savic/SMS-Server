        <script src="/static/js/scripts.js"></script>
        <script>
        	var ids = [];
		$(".cb").change(function() {
		    if(this.checked) {
		    	ids.push(this.id);
		    }else{
		    	var i = ids.indexOf(this.id);
				if(i != -1) { ids.splice(i, 1); }
		    }

		    $("#uid").val(ids.join()); 
		});
        </script>
        
